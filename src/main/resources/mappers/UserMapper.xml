<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbnu.gradesign.dao.UserMapper">
	<resultMap id="BaseResultMap" type="com.hbnu.gradesign.entity.User">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="username" jdbcType="VARCHAR" property="username" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="salt" jdbcType="VARCHAR" property="salt" />
		<result column="status" jdbcType="INTEGER" property="status" />
	</resultMap>
	<select id="findUserByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
		SELECT * FROM `user` WHERE username = #{username};
	</select>

	<insert id="addUser" parameterType="com.hbnu.gradesign.entity.User" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		INSERT INTO `user` ( username, password, salt, status )
		VALUES
			(
			#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{salt,jdbcType=INTEGER},
			#{status,jdbcType=INTEGER}
			)
	</insert>
</mapper>
